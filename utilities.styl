//====================================================
//  Display
//====================================================

.hidden
  display none
.block
  display block
.flex
  display flex
.inline
  display inline
.inline-block
  display inline-block
.inline-flex
  display inline-flex

.overflow-hidden
  overflow hidden
.overflow-scroll
  overflow scroll
.overflow-auto
  overflow auto

.hide-on-xsmall
  +below('xs')
   display none !important
.hide-on-small
  +below('s')
   display none !important
.hide-on-medium
  +below('m')
    display none !important
.hide-on-large
  +below('l')
    display none !important
.hide-on-xlarge
  +below('xl')
    display none !important
.hide-on-hd
  +below('hd')
    display none !important

//====================================================
//  Text wrap
//====================================================

.pre
  white-space pre
.nowrap
  white-space nowrap

//====================================================
//  Scrolling
//====================================================

.scroll-horizontal
  overflow-x scroll
  overflow-y hidden

.scroll-vertical
  overflow-x hidden
  overflow-y scroll

.no-scrollbar-webkit-scrollbar
  background transparent
  height 0px
  width 0px

//====================================================
//  Textareas
//====================================================

.resize-none
  resize none
.resize-vertical
  resize vertical
.resize-horizontal
  resize horizontal

//====================================================
//  Misc.
//====================================================

.cursor-pointer
  cursor pointer

.no-pointer-events
  pointer-events none

.disabled
  opacity 0.5
  cursor not-allowed
  pointer-events none
