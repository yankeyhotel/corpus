//====================================================
//  Borders
//====================================================

border-style = solid
border-color = rgba(0,0,0,0.1)
border-radius = 3px

border-1 = 1px
border-2 = 2px
border-3 = 3px

for i in 0..3
  if i == 0
    .b{i}
      border none !important
    .bt{i}
      border-top none !important
    .br{i}
      border-right none !important
    .bb{i}
      border-bottom none !important
    .bl{i}
      border-left none !important
  else
    .b{i}
      border (border- + (i)) border-style border-color
    .bt{i}
      border-top (border- + (i)) border-style border-color
    .br{i}
      border-right (border- + (i)) border-style border-color
    .bb{i}
      border-bottom (border- + (i)) border-style border-color
    .bl{i}
      border-left (border- + (i)) border-style border-color

//====================================================
//  Border Radius
//====================================================

.rounded
  border-radius border-radius
.not-rounded
  border-radius 0
.circle
  border-radius 50%
