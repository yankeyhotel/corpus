//====================================================
//  Borders
//====================================================

border-style = solid
border-color = rgba(0,0,0,0.1)
border-radius = 3px

border-1 = 1px
border-2 = 2px
border-3 = 3px

for i in 0..3
  if i == 0
    .b{i}, .bt{i}, .br{i}, .bb{i}, .bl{i}
      border none !important
  else
    .b{i}
      border border-(i) border-style border-color
    .bt{i}
      border-top border-(i) border-style border-color
    .br{i}
      border-right border-(i) border-style border-color
    .bb{i}
      border-bottom border-(i) border-style border-color
    .bl{i}
      border-left border-(i) border-style border-color

//====================================================
//  Border Radius
//====================================================

.rounded
  border-radius border-radius
.not-rounded
  border-radius 0
.circle
  border-radius 50%
